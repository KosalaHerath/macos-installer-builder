#!/bin/bash

#Custermize this for your application
APPLICATION_FILE_PATH=start-femr.sh

#Parameters
PRODUCT_HOME=/Library/femr

echo "Post installation process started"

#Change permissions in home directory
echo "Change permissions in product home"
cd ${PRODUCT_HOME}
chmod -R 755 .
[ -d /usr/local/bin ] || mkdir /usr/local/bin

#Add application shortcut to /usr/local/bin
rm -f /usr/local/bin/femr-1.0.0
ln -s ${PRODUCT_HOME}/${APPLICATION_FILE_PATH} /usr/local/bin/femr-1.0.0
echo "Post installation process finished"
